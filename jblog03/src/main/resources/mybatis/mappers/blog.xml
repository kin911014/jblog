<mapper namespace="blog">
	<select id="insert" parameterType="uservo">
		<![CDATA[
		insert into blog values(#{id}, '', '')
		]]>
	</select>
	
	<select id="upload" parameterType="blogvo" >
		<![CDATA[
		update blog set title=#{title}, logo=#{logo} where id = #{id}
		]]>
	</select>
	
	
	
	
	
